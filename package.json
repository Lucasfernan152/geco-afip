{
  "name": "afip-service",
  "version": "1.0.0",
  "description": "Microservicio para facturación electrónica con AFIP",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src/ --quiet",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "afip",
    "facturacion",
    "electronica",
    "argentina"
  ],
  "author": "Lucas Fernandez",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.2.5",
    "node-forge": "^1.3.1",
    "soap": "^1.2.1",
    "winston": "^3.17.0",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.9"
  }
}
